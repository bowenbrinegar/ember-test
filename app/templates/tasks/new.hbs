
<div class='container'>
    <h1>New Task</h1>
    <form>
        <div class="form-group">
            <label for="taskName">Task Name</label>
            <input type="text" class="form-control" id="taskName" placeholder="enter task...">
        </div>
        <div class="form-group">
            <label for="timeFrame">Select Time Frame</label>
            <select class="form-control" id="Timeframe">
                <option>1 hour</option>
                <option>2 hour</option>
                <option>3 hour</option>
                <option>4 hour</option>
                <option>5 hour</option>
            </select>
        </div>
        <div class="form-group">
            <label for="taskAssignment">Task Assignment</label>
            <input type="text" class="form-control" id="taskAssignment" placeholder="enter task holder's name...">
        </div>
        <button {{action 'addTask'}} class='btn btn-primary'>Submit</button>
    </form>
</div>


{{outlet}}