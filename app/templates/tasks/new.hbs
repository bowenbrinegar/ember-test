
<div class='container'>
    <h1>New Task</h1>
    <form>
        <div class="form-group">
            <label for="taskName">Task Name</label>
            {{input value=title type="text" class="form-control" id="taskName" placeholder="enter task..."}}
        </div>
        <div class="form-group">
            <label for="taskAssignment">Task Assignment</label>
            {{input value=holder type="text" class="form-control" id="taskAssignment" placeholder="enter task holder's name..."}}
        </div>
        <button {{action 'addTask'}} class='btn btn-primary'>Submit</button>
    </form>
</div>


{{outlet}}